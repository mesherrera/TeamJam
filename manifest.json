{
  "manifest_version": 2,
  "name": "JAMmin' Translation",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "logo-16.png",
    "32": "logo-32.png",
    "128": "logo-128.png"
  },
  "browser_action": {
    "default_title": "Translate",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "logo-16.png",
      "32": "logo-32.png",
      "128": "logo-128.png"
    }
  },
  "permissions": ["storage", "activeTab", "tabs"],
  "background": ["background.js"]

}
